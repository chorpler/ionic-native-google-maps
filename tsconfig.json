
{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@awesome-cordova-plugins/core": ["./dist/@awesome-cordova-plugins/core"]
    },
    "outDir": "./dist",
    "rootDir": "src",
    "target": "es5",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "inlineSources": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "src/@ionic-native/plugins/google-maps/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/@ionic-native/plugins/google-maps/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
